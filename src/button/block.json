{
	"name": "uwai/button",
	"title": "UWAI Button",
	"category": "common",
	"textdomain": "uwai",
	"supports": {
		"html": false
	},
	"attributes": {
		"body": {
			"type": "string",
			"source": "text"
		},
		"url": {
			"type": "string",
			"source": "attribute",
			"selector": "a",
			"attribute": "href"
		},
		"linkTarget": {
			"type": "string",
			"source": "attribute",
			"selector": "a",
			"attribute": "target"
		},
		"rel": {
			"type": "string",
			"source": "attribute",
			"selector": "a",
			"attribute": "rel"
		},
		"style": {
			"type": "string",
			"default": "btn--lightbg"
		},
		"size": {
			"type": "string"
		},
		"play": {
			"type": "boolean",
			"default": false
		},
		"disabled": {
			"type": "boolean",
			"default": false
		}
	}
}